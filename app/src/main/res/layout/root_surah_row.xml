<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
 xmlns:app="http://schemas.android.com/apk/res-auto"
 android:gravity="center_vertical"
 android:orientation="horizontal"
 android:descendantFocusability="blocksDescendants"
 android:layout_width="fill_parent"
 android:layout_height="65.0dip">
    <RelativeLayout
     android:orientation="horizontal"
     android:id="@+id/leftList"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent">
        <RelativeLayout
         android:id="@+id/surah_number_box"
         android:background="@drawable/surah_box"
         android:layout_width="42.0dip"
         android:layout_height="42.0dip"
         android:layout_marginLeft="6.0dip"
         android:layout_marginRight="5.0dip"
         android:layout_centerVertical="true">
            <androidx.appcompat.widget.AppCompatTextView
             android:textAppearance="?android:textAppearanceSmall"
             android:textSize="12.0sp"
             android:textStyle="bold"
             android:textColor="@android:color/white"
             android:id="@+id/surah_number"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:fontFamily="sans-serif" />
        </RelativeLayout>
        <RelativeLayout
         android:id="@+id/content_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="1.0dip"
         android:layout_toRightOf="@id/surah_number_box"
         android:layout_centerVertical="true">
            <androidx.appcompat.widget.AppCompatTextView
             android:textAppearance="?android:textAppearanceMedium"
             android:textSize="16.0sp"
             android:textColor="@android:color/white"
             android:id="@+id/surah_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Al-Faatihah"
             android:fontFamily="sans-serif" />
            <androidx.appcompat.widget.AppCompatTextView
             android:textAppearance="?android:textAppearanceSmall"
             android:textColor="#ff8f8571"
             android:id="@+id/surah_type_count"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Makki | 7 aayaat"
             android:layout_below="@id/surah_name" />
        </RelativeLayout>
        <ImageView
         android:id="@+id/surah_img"
         android:layout_width="wrap_content"
         android:layout_height="30.0dip"
         android:layout_marginRight="8.0dip"
         android:scaleType="fitEnd"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:tint="@android:color/white" />
    </RelativeLayout>
</RelativeLayout>
